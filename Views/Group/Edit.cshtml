@model MvcMeetcha.Models.Group

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroupId" />
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupDescription" class="control-label"></label>
                <input asp-for="GroupDescription" class="form-control" />
                <span asp-validation-for="GroupDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupTypeId" class="control-label"></label>
                <select asp-for="GroupTypeId" class="form-control" asp-items="ViewBag.GroupTypeId">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="GroupTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupImageFile" class="control-label"></label>
                <input asp-for="GroupImageFile" accept="image/*" onchange="loadFile(event)"/>
                <span asp-validation-for="GroupImageFile" class="text-danger"></span>
            </div>
            <div>
                <img id="output" width="200" />
            </div>
            <script>
            var loadFile = function(event) {
                var image = document.getElementById('output');
                image.src = URL.createObjectURL(event.target.files[0]);
            };
            </script>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
