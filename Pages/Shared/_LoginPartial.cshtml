@using MvcMeetcha.Data

@using Microsoft.AspNetCore.Identity

@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
  <li class="nav-item">
    <a id="manage" class="nav-link text-dark" asp-page="/Profile" title="Manage">Hello @UserManager.GetUserName(User)!</a>
  </li>
  <li class="nav-item">
    <form id="logoutForm" class="form-inline" asp-page="/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
      <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
  </li>
}
else
{
  <li class="nav-item">
    <a class="nav-link text-dark" id="signup" asp-page="/SignUp">Register</a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" id="login" asp-page="/Login">Login</a>
  </li>
}
</ul>
