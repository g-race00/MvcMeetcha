@page
@model EditModel
@{
  ViewData["Title"] = "Edit Group";
}

<form method="post" style="max-width: 400px;">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" asp-for="Input.Id" />
  <div class="form-group">
    <label class="control-label">@Html.DisplayNameFor(model => model.Group.Id)</label>
    <div class="form-control-plaintext font-weight-bold">@Html.DisplayFor(model => model.Group.Id)</div>
  </div>
  <div class="form-group">
    <label asp-for="Input.Name" class="control-label"></label>
    <input asp-for="Input.Name" class="form-control" />
    <span asp-validation-for="Input.Name" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Input.GroupTypeId" class="control-label"></label>
    <select asp-for="Input.GroupTypeId" asp-items="Model.GroupTypes" class="form-control"></select>
    <span asp-validation-for="Input.GroupTypeId" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Input.ImageFile" class="control-label"></label>
    <input asp-for="Input.ImageFile" class="form-control" onchange="previewImage(event)" />
    <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
    <div class="image-preview"><img id="preview" src="/data/images/@Model.Group.Image"></div>
  </div>
  <div class="form-group">
    <label asp-for="Input.Description" class="control-label"></label>
    <textarea asp-for="Input.Description" class="form-control"></textarea>
    <span asp-validation-for="Input.Description" class="text-danger"></span>
  </div>
  <div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
  </div>
</form>
<div>
  <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
